{% extends 'base.html.twig' %}

{% block title %}
    Listagem de produtos -
{% endblock %}

{% block body %}
    <h1>Listando produtos</h1>

    <div class="row">
        <div class="col-md-12">
            <a href="" class="btn btn-lg btn-primary float-right">Adicionar produto</a>
        </div>
    </div>

    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <th>Cod</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for produto in produtos %}
                <tr>
                    <td>{{ produto.id }}</td>
                    <td>{{ produto.nome }}</td>
                    <td>{{ produto.preco }}</td>
                    <td>
                        <a class="btn btn-sm btn-warning">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a class="btn btn-sm btn-success">
                            <i class="fa fa-pen"></i>
                        </a>
                        <a class="btn btn-sm btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                Nenhum produto cadastrado.
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
